# Path
export PATH=/usr/local/cuda-8.0/bin:~/.rbenv/bin:/usr/local/texlive/2017/bin/i386-linux:~/bin:/usr/local/bin:$PATH:~/.cargo/bin

# Path to your oh-my-zsh installation.
export ZSH=/home/emredjan/.oh-my-zsh

# Completion
autoload -Uz compinit && compinit

### 3rd Party ###
# CUDA Stuff
export LD_LIBRARY_PATH=/usr/local/cuda-8.0/lib64
export CUDA_HOME=/usr/local/cuda-8.0

# Conda Stuff
. ~/anaconda3/etc/profile.d/conda.sh
export CONDA_LEFT_PROMPT=1

# rbenv
eval "$(rbenv init -)"

# thefuck
eval $(thefuck --alias)

# z (use plugin)
# . ~/zsh/z.sh

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Good themes: fishy, simple, wezm
ZSH_THEME="mortalscumbag"

# COMPLETION_WAITING_DOTS="true"

HIST_STAMPS="dd/mm/yyyy"

plugins=(
  git
  copyfile
  copydir
  history-substring-search
  tmux
  z
  shrink-path
  zsh-autosuggestions
  zsh-syntax-highlighting
)

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)
ZSH_HIGHLIGHT_PATTERNS+=('rm -rf *' 'fg=white,bold,bg=red')

source $ZSH/oh-my-zsh.sh

# export LANG=en_US.UTF-8

