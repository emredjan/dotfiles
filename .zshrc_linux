# Path
export PATH=/usr/local/cuda-10.0/bin:~/.rbenv/bin:/usr/local/texlive/2017/bin/x86_64-linux:~/bin:/usr/local/bin:~/.cargo/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH=/home/emredjan/.oh-my-zsh

# fpath
fpath+=~/.oh-my-zsh/custom/plugins/conda-zsh-completion

# enable extended glob
setopt extendedglob

# Completion
autoload -Uz compinit
if [[ -n ${ZDOTDIR:-${HOME}}/$ZSH_COMPDUMP(#qN.mh+24) ]]; then
    compinit -d $ZSH_COMPDUMP;
else
    compinit -C;
fi;

### 3rd Party ###
# CUDA Stuff
export LD_LIBRARY_PATH=/usr/local/cuda-10.0/lib64
export CUDA_HOME=/usr/local/cuda-10.0

# Conda Stuff
. ~/anaconda3/etc/profile.d/conda.sh
export CONDA_LEFT_PROMPT=1

# rbenv
rbenv() {
    eval "$(command rbenv init -)"
    rbenv "$@"
}

# Good themes: fishy, simple, wezm
ZSH_THEME="mortalscumbag"

# COMPLETION_WAITING_DOTS="true"

HIST_STAMPS="dd/mm/yyyy"

export NVM_LAZY_LOAD=true

plugins=(
  git
  copyfile
  copydir
  history-substring-search
  tmux
  z
  shrink-path
  zsh-autosuggestions
  zsh-syntax-highlighting
  zsh-nvm
)

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern)
ZSH_HIGHLIGHT_PATTERNS+=('rm -rf *' 'fg=white,bold,bg=red')

source $ZSH/oh-my-zsh.sh

# export LANG=en_US.UTF-8
